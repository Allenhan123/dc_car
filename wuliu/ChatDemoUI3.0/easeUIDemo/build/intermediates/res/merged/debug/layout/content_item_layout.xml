<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content"

    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_spname"
            android:layout_width="100dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"

            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="合肥三意汽配dddddd"/>

        <TextView
            android:id="@+id/tv_sptype"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"

            android:text="合肥三意汽配111111eeeeeeeee"/>

        <ImageButton
            android:paddingTop="10dp"

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:focusable="false"
            android:src="@mipmap/dcmsg"
            android:id="@+id/ibt_spqq"
            android:background="#00000000"
            android:scaleType="centerCrop" />
        <ImageButton
            android:paddingTop="10dp"

            android:id="@+id/ibt_sptell"
            android:focusable="false"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="#00000000"
            android:src="@mipmap/dctel"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#b7eeea"
        android:id="@+id/layout_lin"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:background="#e7bfa1"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"

                android:text="三里街汽配城" />


            <ImageButton
                android:id="@+id/ibt_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:paddingTop="2dp"

                android:layout_marginLeft="35dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/dc_wx" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="石冰清"
            android:textSize="20sp"
            android:textColor="#110707"

            android:background="#aaf9d9"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:id="@+id/tv_itemtext"/>


    </LinearLayout>




</LinearLayout>
