        android:drawableLeft="@mipmap/dcstel"
        android:text="点车配送" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/dcstel"
        android:text="南翔配送" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/dcstel"
        android:text="国际汽配城配送" />
</LinearLayout>